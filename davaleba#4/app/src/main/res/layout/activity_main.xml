<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Baton lukas #### combined background uketess gamosaxulebas ar gvazlevs magram mgoni png ze cota uketesia ;Ddd -->
    <View
        android:id="@+id/rectangle_c"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:background="@drawable/combined_test"
        android:elevation="4dp" />


    <RelativeLayout
        android:id="@+id/sign_in"
        android:layout_width="349dp"
        android:layout_height="397dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="210dp">

        <TextView
            android:layout_width="209dp"
            android:layout_height="53dp"
            android:layout_marginStart="2dp"
            android:text="@string/hello"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:fontFamily="@font/sf_pro_heavy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="62dp"
            android:text="@string/lets_introduce"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:fontFamily="@font/sf_pro_medium"
            />

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="347dp"
            android:layout_height="54dp"
            android:layout_marginTop="128dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            >

            <!-- i dont know what should i write in a contentdescription  -->
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/icon"
                android:contentDescription="@string/idk"/>

            <EditText
                android:id="@+id/et_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="12dp"
                android:gravity="top"
                android:hint="@string/your_full_name"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textSize="21sp"
                android:backgroundTint="@color/linear_layout"
                android:inputType="text"/>
            
            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="291dp"
                android:layout_height="2dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="52dp"
                android:src="@drawable/line1"
                android:contentDescription="@string/idk"/>

            


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="347dp"
            android:layout_height="54dp"
            android:layout_below="@+id/r1"
            android:layout_marginTop="38dp">

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/icon"
                android:contentDescription="@string/idk"/>


            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="12dp"
                android:gravity="top"
                android:hint="@string/username"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textSize="21sp"
                android:backgroundTint="@color/linear_layout"
                android:inputType="text"/>

            <ImageView
                android:id="@+id/iv_line2"
                android:layout_width="291dp"
                android:layout_height="2dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="52dp"
                android:src="@drawable/line1"
                android:contentDescription="@string/idk"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/ib_button2"
                android:layout_width="58dp"
                android:layout_height="59dp"
                android:src="@drawable/button1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/idk">
            </ImageButton>

            <View
                android:id="@+id/arrow"
                android:layout_width="16dp"
                android:layout_height="9dp"
                android:background="@drawable/arrow"
                android:paddingTop="2dp"
                android:paddingStart="2dp"
                android:layout_marginTop="24.5dp"
                android:layout_marginStart="21dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="245dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp">

            <ImageButton
                android:id="@+id/ib_nextButton"
                android:layout_width="245dp"
                android:layout_height="58dp"
                android:src="@drawable/next_button"
                android:contentDescription="@string/idk"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>

